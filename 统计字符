#include"stdio.h"
int main()
{

	printf("输入一行字符：\n");

	char ch;

	int i, count = 0, word = 0;

	while ((ch = getchar()) != '\n')
	{

		if (ch == 'i' || ch == 'I')
			word = 0;
		if (word == 0 && (ch == 't' || ch == 'T'))

		{

			word = 1;
			count++;
		}
	}
	printf("总共有 %d \n", count);

}
#include"stdio.h"
int main()
{
	int x = 0, i;
	char a[] = " ";
	scanf_s("%c", &a[i]);
	for (i = 0;i < 100; i++)
		if (a[i] == 'I' && a[i + 1] == 'T' || a[i] == 'i' && a[i + 1] == 't')
			x++;
	printf("%d", x);
}
